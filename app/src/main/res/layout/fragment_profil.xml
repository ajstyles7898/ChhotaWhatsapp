<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorVeryLightGreen"
    tools:context=".MessageActivity.ProfilFragment">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/app_toolbar"/>

    <ImageView
        android:id="@+id/profile_iv_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/colorDarkGray"
        android:layout_below="@+id/profile_toolbar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="abdfgsd"
        android:layout_below="@+id/profile_iv_pic"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/profile_tv_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="abdfgsd"
        android:layout_below="@+id/profile_tv_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>