<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightCreamy"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/status_top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/status_iv_propic"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/colorDarkGray"/>

        <TextView
            android:id="@+id/status_tv_add_status"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Add Status"
            android:gravity="center"
            android:textColor="@color/colorLemonGreen"
            android:background="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/status_iv_propic"/>

        <TextView
            android:id="@+id/status_tv_plus"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorLemonGreen"
            android:gravity="center"
            android:layout_toEndOf="@+id/status_tv_add_status"
            android:textSize="30sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/status_top_relative_layout">

    </RelativeLayout>

</RelativeLayout>